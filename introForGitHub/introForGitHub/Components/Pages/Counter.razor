@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increses Count</button>
<button class="btn btn-primary" @onclick="DecrementCount">Decrese Count</button>


@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount+=3;
    }
    private void DecrementCount()
    {
        currentCount -= 3;
    }
}
